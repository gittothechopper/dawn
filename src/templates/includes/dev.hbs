<script>
	// Developer Tools

	// Click events
	window.addEventListener('click', function (e) {
		
		// Define the hit point size area in pixels (width & height)
		var hitArea = 40,
			left = e.pageX-(hitArea/2),
			top = e.pageY-(hitArea/2),
			post = {
		    	"position": {
	            	"x": left,
	            	"y": top
		        }
			};

			// post = JSON.stringify(post);
		
		// Hold shift and click to console log CSS position of hit area
		if (e.shiftKey) {

			$.ajax({
				url: 'http://127.0.0.1:3001/ref',
				type: 'post',
				dataType: 'json',
				contentType: 'application/json',
				data: post
			});
		}
	}, false);
</script>