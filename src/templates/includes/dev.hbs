<script>
	// Developer Tools

	// Click events
	window.addEventListener('click', function (e) {
		
		// Define the hit point size area in pixels (width & height)
		var hitArea = 40;
		
		// Hold shift and click to console log CSS position of hit area
		if (e.shiftKey) {
			console.log('left: ' + (e.pageX-(hitArea/2)) + 'px; top: ' + (e.pageY-(hitArea/2)) + 'px;')
		}
	}, false);
</script>